@using WebStore.Domain.Entities.Identity
@model WebStore.Domain.Models.Employee

@{
    ViewData["Title"] = "Детали";
}

<div class="container">
    <h1>Детали о сотруднике @Model.LastName @Model.FirstName @Model.Patronymic</h1>
    <div>
        <h4>Сотрудник</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patronymic)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patronymic)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Age)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateOfBorn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateOfBorn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateOfEmployment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateOfEmployment)
            </dd>
        </dl>
    </div>
    <div>
        @if (User.IsInRole(Role.Administrators))
        {
            @:@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
            @:<a asp-controller="Employees" asp-action="Delete" asp-route-id="@Model.Id" class="text-danger">delete</a> |
        }
        <a asp-action="Index">Back to List</a>
    </div>
</div>
